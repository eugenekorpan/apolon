<h1>Listing users</h1>

<table border=1 cellspacing=0 cellpadding=3 id='users_table'>
  <tr>
    <th>#</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Job title</th>
    <th>Age</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each_with_index do |user, index| %>
  <tr id='<%= user.id %>'>
    <td><%= index+1 %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>
    <td><%= user.job_title %></td>
    <td><%= user.age %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user), remote: true, data: { toggle: "modal", target: '#user_edit' } %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>

<div id='user_edit' class='modal hide fade'></div>