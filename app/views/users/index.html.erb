<h1>Listing users</h1>

<table border=1 cellspacing=0 cellpadding=3>
  <tr>
    <th>#</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Job title</th>
    <th>Age</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @users.each_with_index do |user, index| %>
      <tr id=<%= user.id %> >
        <td><%= index+1 %></td>
        <td class='first_name'><%= user.first_name %></td>
        <td class='last_name'><%= user.last_name %></td>
        <td class='email'><%= user.email %></td>
        <td class='job_title'><%= user.job_title %></td>
        <td class='age'><%= user.age %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user), remote: true %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>

<div id='myModal' class='modal hide fade'></div>
